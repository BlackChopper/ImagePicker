<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hacknife.mediapicker">


    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 从SDCard读取数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application>

        <activity
            android:name="com.hacknife.mediapicker.ui.MediaGridActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.hacknife.mediapicker.ui.ImageCropActivity"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="false" />
        <activity
            android:name="com.hacknife.mediapicker.ui.ImagePreviewActivity"
            android:configChanges="orientation|screenSize" />

        <provider
            android:name="com.hacknife.mediapicker.MediaPickerProvider"
            android:authorities="${applicationId}.MediaPickerFileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/imagepicker_paths" />
        </provider>

        <activity
            android:name="com.hacknife.mediapicker.ui.ImageViewerActivity"
            android:theme="@style/ImagePicker.Transparent" />
    </application>

</manifest>
